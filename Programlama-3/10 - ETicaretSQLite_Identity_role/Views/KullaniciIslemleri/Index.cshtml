@model List<AppUser>

<div class="jumbotron mt-5">
    <h1>Kullanıcılar</h1>
    @*<a asp-conroller="kullaniciislemleri" asp-action="create">Create</a>*@
    <a class="btn btn-primary" role="button" asp-conroller="kullaniciislemleri" asp-action="create"><i class="fas fa-user-plus"></i> Kullanıcı Ekle</a>

    <table class="table table-hover">
        <thead>
        <th>E-Posta</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.Aciklama</td>
                    <td>
                        <div role="group" class="btn-group">
                            <a class="btn btn-outline-warning" role="button" data-toggle="tooltip" title="Düzenle" asp-controller="kullaniciislemleri" asp-action="edit" asp-route-id="@item.Id">
                                <i class="far fa-edit"></i>
                            </a>
                            <a class="btn btn-outline-info" role="button" data-toggle="tooltip" title="Detaylar" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-info"></i>
                            </a>
                            <a class="btn btn-outline-danger" role="button" data-toggle="tooltip" title="Sil" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fa fa-remove"></i>
                            </a>

                            <a class="btn btn-outline-dark" role="button" data-toggle="tooltip" title="Sil" asp-action="KullanicininRolleri" asp-route-id="@item.Id">
                                <i class="fa fa-users"></i>
                            </a>

                            <a class="btn btn-outline-dark" role="button" data-toggle="tooltip" title="Sil" asp-action="Assign" asp-route-id="@item.Id">
                                <i class="fa fa-plus-circle"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>